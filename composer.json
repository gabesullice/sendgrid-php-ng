{
  "name": "fastglass/sendgrid",
  "description": "This library allows you to send emails through SendGrid using PHP and Guzzle 6.x.",
  "version": "2.0.0",
  "homepage": "https://github.com/taz77/sendgrid-php-ng",
  "license": "MIT",
  "keywords": [
    "SendGrid",
    "sendgrid",
    "Twilio SendGrid",
    "twilio sendgrid",
    "email",
    "send",
    "grid"
  ],
  "authors": [
    {
      "name": "Brady Owens",
      "email": "brady@fastglass.net",
      "homepage": "https://github.com/taz77"
    }
  ],
  "require": {
    "php": ">=5.6.0",
    "guzzlehttp/guzzle": ">=6.2.1",
    "ext-json": "*",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "mockery/mockery": "~0.9",
    "phpunit/phpunit": "~6.5",
    "vlucas/phpdotenv": "~1.0",
    "squizlabs/php_codesniffer": "2.*"
  },
  "replace": {
    "sendgrid/sendgrid-php": "*"
  },
  "type": "library",
  "autoload": {
    "psr-4": {
      "SendGrid\\Mail": "src/mail",
      "SendGrid\\Helper\\": "src/helper/"
    },
    "classmap": [
      "src/Client.php",
      "src/SendGrid.php",
      "src/Response.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "SendGrid\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-ci": "vendor/bin/phpunit --coverage-text"
  }
}
